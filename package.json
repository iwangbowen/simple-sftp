{
  "name": "simple-scp",
  "displayName": "Simple SCP",
  "description": "Lightweight SCP file upload tool with cross-device host configuration sync",
  "version": "0.6.0",
  "publisher": "WangBowen",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/iwangbowen/simple-scp.git"
  },
  "keywords": [
    "scp",
    "sftp",
    "ssh",
    "upload",
    "remote",
    "deploy"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:simpleScp.hosts"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "simpleScp",
          "title": "Simple SCP",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "simpleScp": [
        {
          "id": "simpleScp.hosts",
          "name": "Hosts"
        }
      ]
    },
    "commands": [
      {
        "command": "simpleScp.addHost",
        "title": "Add Host",
        "category": "Simple SCP",
        "icon": "$(add)"
      },
      {
        "command": "simpleScp.addHostToGroup",
        "title": "Add Host to Group",
        "category": "Simple SCP",
        "icon": "$(add)"
      },
      {
        "command": "simpleScp.editHost",
        "title": "Edit Host",
        "category": "Simple SCP",
        "icon": "$(edit)"
      },
      {
        "command": "simpleScp.deleteHost",
        "title": "Delete",
        "category": "Simple SCP",
        "icon": "$(trash)"
      },
      {
        "command": "simpleScp.addGroup",
        "title": "Add Group",
        "category": "Simple SCP",
        "icon": "$(new-folder)"
      },
      {
        "command": "simpleScp.editGroup",
        "title": "Edit Group",
        "category": "Simple SCP",
        "icon": "$(edit)"
      },
      {
        "command": "simpleScp.importFromSshConfig",
        "title": "Import from SSH Config",
        "category": "Simple SCP",
        "icon": "$(cloud-download)"
      },
      {
        "command": "simpleScp.uploadFile",
        "title": "Upload to Remote Host",
        "category": "Simple SCP"
      },
      {
        "command": "simpleScp.downloadFile",
        "title": "Download from Remote Host",
        "category": "Simple SCP",
        "icon": "$(cloud-download)"
      },
      {
        "command": "simpleScp.setupPasswordlessLogin",
        "title": "Setup Passwordless Login",
        "category": "Simple SCP",
        "icon": "$(key)"
      },
      {
        "command": "simpleScp.testConnection",
        "title": "Test Connection",
        "category": "Simple SCP",
        "icon": "$(plug)"
      },
      {
        "command": "simpleScp.refresh",
        "title": "Refresh",
        "category": "Simple SCP",
        "icon": "$(refresh)"
      },
      {
        "command": "simpleScp.configureAuth",
        "title": "Configure Authentication",
        "category": "Simple SCP",
        "icon": "$(lock)"
      },
      {
        "command": "simpleScp.copySshCommand",
        "title": "Copy SSH Command",
        "category": "Simple SCP",
        "icon": "$(copy)"
      },
      {
        "command": "simpleScp.showLogs",
        "title": "Show Output Logs",
        "category": "Simple SCP",
        "icon": "$(output)"
      },
      {
        "command": "simpleScp.moveHostToGroup",
        "title": "Move to Group",
        "category": "Simple SCP",
        "icon": "$(folder)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "simpleScp.addHost"
        },
        {
          "command": "simpleScp.addGroup"
        },
        {
          "command": "simpleScp.importFromSshConfig"
        },
        {
          "command": "simpleScp.showLogs"
        },
        {
          "command": "simpleScp.uploadFile",
          "when": "false"
        },
        {
          "command": "simpleScp.downloadFile",
          "when": "false"
        },
        {
          "command": "simpleScp.editHost",
          "when": "false"
        },
        {
          "command": "simpleScp.deleteHost",
          "when": "false"
        },
        {
          "command": "simpleScp.setupPasswordlessLogin",
          "when": "false"
        },
        {
          "command": "simpleScp.testConnection",
          "when": "false"
        },
        {
          "command": "simpleScp.refresh",
          "when": "false"
        },
        {
          "command": "simpleScp.configureAuth",
          "when": "false"
        },
        {
          "command": "simpleScp.copySshCommand",
          "when": "false"
        },
        {
          "command": "simpleScp.addHostToGroup",
          "when": "false"
        },
        {
          "command": "simpleScp.editGroup",
          "when": "false"
        },
        {
          "command": "simpleScp.moveHostToGroup",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "simpleScp.addHost",
          "when": "view == simpleScp.hosts",
          "group": "navigation@1"
        },
        {
          "command": "simpleScp.addGroup",
          "when": "view == simpleScp.hosts",
          "group": "navigation@2"
        },
        {
          "command": "simpleScp.refresh",
          "when": "view == simpleScp.hosts",
          "group": "navigation@3"
        },
        {
          "command": "simpleScp.importFromSshConfig",
          "when": "view == simpleScp.hosts",
          "group": "1_import@1"
        }
      ],
      "view/item/context": [
        {
          "command": "simpleScp.editHost",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "inline@1"
        },
        {
          "command": "simpleScp.testConnection",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "inline@2"
        },
        {
          "command": "simpleScp.downloadFile",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "1_download@1"
        },
        {
          "command": "simpleScp.copySshCommand",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "2_actions@1"
        },
        {
          "command": "simpleScp.configureAuth",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "2_actions@2"
        },
        {
          "command": "simpleScp.setupPasswordlessLogin",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "2_actions@3"
        },
        {
          "command": "simpleScp.moveHostToGroup",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "2_actions@4"
        },
        {
          "command": "simpleScp.deleteHost",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "9_danger@1"
        },
        {
          "command": "simpleScp.addHostToGroup",
          "when": "view == simpleScp.hosts && viewItem == group",
          "group": "inline@1"
        },
        {
          "command": "simpleScp.editGroup",
          "when": "view == simpleScp.hosts && viewItem == group",
          "group": "inline@2"
        },
        {
          "command": "simpleScp.deleteHost",
          "when": "view == simpleScp.hosts && viewItem == group",
          "group": "2_danger@1"
        }
      ],
      "explorer/context": [
        {
          "command": "simpleScp.uploadFile",
          "group": "7_modification"
        }
      ],
      "editor/context": [
        {
          "command": "simpleScp.uploadFile",
          "group": "7_modification"
        }
      ]
    },
    "configuration": {
      "title": "Simple SCP",
      "properties": {
        "simpleScp.showDotFiles": {
          "type": "boolean",
          "default": true,
          "description": "Show hidden files and directories (dot files) when browsing remote files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.js --production",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/ssh2": "^1.15.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "ssh2": "^1.15.0",
    "ssh2-sftp-client": "^10.0.3"
  }
}
