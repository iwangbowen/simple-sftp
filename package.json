{
  "name": "simple-scp",
  "displayName": "Simple SCP",
  "description": "Lightweight SCP file upload and download tool with cross-device host configuration sync",
  "version": "1.0.8",
  "publisher": "WangBowen",
  "icon": "resources/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iwangbowen/simple-scp.git"
  },
  "keywords": [
    "scp",
    "sftp",
    "ssh",
    "upload",
    "remote",
    "deploy"
  ],
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "capabilities": {
    "virtualWorkspaces": {
      "supported": false,
      "description": "This extension requires access to the local file system for SSH/SCP operations and cannot run in virtual workspaces."
    }
  },
  "activationEvents": [
    "onView:simpleScp.hosts"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "simpleScp",
          "title": "Simple SCP",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "simpleScp": [
        {
          "id": "simpleScp.hosts",
          "name": "Hosts"
        },
        {
          "id": "simpleScp.transferQueue",
          "name": "Transfer Queue",
          "icon": "$(cloud-upload)"
        },
        {
          "id": "simpleScp.helpFeedback",
          "name": "Help and Feedback",
          "icon": "$(question)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "simpleScp.hosts",
        "contents": "Welcome to Simple SCP\n\nNo remote hosts configured yet. Get started by adding your first host to upload and download files via SCP.\n\n[$(add) Add Host](command:simpleScp.addHost)\n\n[$(cloud-download) Import from SSH Config](command:simpleScp.importFromSshConfig)\n\nNeed help? Check out the [documentation](https://github.com/iwangbowen/simple-scp#readme)."
      }
    ],
    "submenus": [
      {
        "id": "simpleScp.addMenu",
        "label": "Add",
        "icon": "$(add)"
      }
    ],
    "commands": [
      {
        "command": "simpleScp.addHost",
        "title": "Add Host",
        "category": "Simple SCP",
        "icon": "$(add)"
      },
      {
        "command": "simpleScp.addHostToGroup",
        "title": "Add Host to Group",
        "category": "Simple SCP",
        "icon": "$(add)"
      },
      {
        "command": "simpleScp.editHost",
        "title": "Edit Host",
        "category": "Simple SCP",
        "icon": "$(edit)"
      },
      {
        "command": "simpleScp.duplicateHost",
        "title": "Duplicate Host",
        "category": "Simple SCP",
        "icon": "$(copy)"
      },
      {
        "command": "simpleScp.deleteHost",
        "title": "Delete",
        "category": "Simple SCP",
        "icon": "$(trash)"
      },
      {
        "command": "simpleScp.addGroup",
        "title": "Add Group",
        "category": "Simple SCP",
        "icon": "$(add)"
      },
      {
        "command": "simpleScp.editGroup",
        "title": "Edit Group",
        "category": "Simple SCP",
        "icon": "$(edit)"
      },
      {
        "command": "simpleScp.importFromSshConfig",
        "title": "Import from SSH Config",
        "category": "Simple SCP",
        "icon": "$(cloud-download)"
      },
      {
        "command": "simpleScp.exportAllHosts",
        "title": "Export All Hosts",
        "category": "Simple SCP",
        "icon": "$(export)"
      },
      {
        "command": "simpleScp.exportGroup",
        "title": "Export Group",
        "category": "Simple SCP",
        "icon": "$(export)"
      },
      {
        "command": "simpleScp.exportHost",
        "title": "Export Host",
        "category": "Simple SCP",
        "icon": "$(export)"
      },
      {
        "command": "simpleScp.importHosts",
        "title": "Import Hosts",
        "category": "Simple SCP",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "simpleScp.uploadFile",
        "title": "Upload to Remote Host",
        "category": "Simple SCP"
      },
      {
        "command": "simpleScp.browseFiles",
        "title": "Browse Files",
        "category": "Simple SCP",
        "icon": "$(folder-opened)"
      },
      {
        "command": "simpleScp.downloadToLocal",
        "title": "Download from Remote Host to Here",
        "category": "Simple SCP"
      },
      {
        "command": "simpleScp.setupPasswordlessLogin",
        "title": "Setup Passwordless Login",
        "category": "Simple SCP",
        "icon": "$(key)"
      },
      {
        "command": "simpleScp.testConnection",
        "title": "Test Connection",
        "category": "Simple SCP",
        "icon": "$(plug)"
      },
      {
        "command": "simpleScp.refresh",
        "title": "Refresh",
        "category": "Simple SCP",
        "icon": "$(refresh)"
      },
      {
        "command": "simpleScp.configureAuth",
        "title": "Configure Authentication",
        "category": "Simple SCP",
        "icon": "$(lock)"
      },
      {
        "command": "simpleScp.copySshCommand",
        "title": "Copy SSH Command",
        "category": "Simple SCP",
        "icon": "$(copy)"
      },
      {
        "command": "simpleScp.addBookmark",
        "title": "Add Bookmark",
        "category": "Simple SCP",
        "icon": "$(bookmark)"
      },
      {
        "command": "simpleScp.renameBookmark",
        "title": "Rename Bookmark",
        "category": "Simple SCP",
        "icon": "$(edit)"
      },
      {
        "command": "simpleScp.deleteBookmark",
        "title": "Delete Bookmark",
        "category": "Simple SCP",
        "icon": "$(trash)"
      },
      {
        "command": "simpleScp.browseBookmark",
        "title": "Browse Files",
        "category": "Simple SCP",
        "icon": "$(folder-opened)"
      },
      {
        "command": "simpleScp.showLogs",
        "title": "Show Output Logs",
        "category": "Simple SCP",
        "icon": "$(output)"
      },
      {
        "command": "simpleScp.showConnectionPool",
        "title": "Show Connection Pool Status",
        "category": "Simple SCP",
        "icon": "$(dashboard)"
      },
      {
        "command": "simpleScp.moveHostToGroup",
        "title": "Move to Group",
        "category": "Simple SCP",
        "icon": "$(folder)"
      },
      {
        "command": "simpleScp.toggleStar",
        "title": "Toggle Star",
        "category": "Simple SCP",
        "icon": "$(star)"
      },
      {
        "command": "simpleScp.pauseQueue",
        "title": "Pause Transfer Queue",
        "category": "Simple SCP",
        "icon": "$(debug-pause)"
      },
      {
        "command": "simpleScp.resumeQueue",
        "title": "Resume Transfer Queue",
        "category": "Simple SCP",
        "icon": "$(debug-continue)"
      },
      {
        "command": "simpleScp.pauseTask",
        "title": "Pause Transfer Task",
        "category": "Simple SCP",
        "icon": "$(debug-pause)"
      },
      {
        "command": "simpleScp.resumeTask",
        "title": "Resume Transfer Task",
        "category": "Simple SCP",
        "icon": "$(debug-continue)"
      },
      {
        "command": "simpleScp.cancelTask",
        "title": "Cancel Transfer Task",
        "category": "Simple SCP",
        "icon": "$(close)"
      },
      {
        "command": "simpleScp.retryTask",
        "title": "Retry Failed Task",
        "category": "Simple SCP",
        "icon": "$(refresh)"
      },
      {
        "command": "simpleScp.removeTask",
        "title": "Remove Task from Queue",
        "category": "Simple SCP",
        "icon": "$(trash)"
      },
      {
        "command": "simpleScp.clearCompleted",
        "title": "Clear Completed Tasks",
        "category": "Simple SCP",
        "icon": "$(clear-all)"
      },
      {
        "command": "simpleScp.clearAll",
        "title": "Clear All Tasks",
        "category": "Simple SCP",
        "icon": "$(trash)"
      },
      {
        "command": "simpleScp.showTaskDetails",
        "title": "Show Task Details",
        "category": "Simple SCP",
        "icon": "$(info)"
      },
      {
        "command": "simpleScp.showQueueStats",
        "title": "Show Queue Statistics",
        "category": "Simple SCP",
        "icon": "$(graph)"
      },
      {
        "command": "simpleScp.viewTransferHistory",
        "title": "View Transfer History",
        "category": "Simple SCP",
        "icon": "$(history)"
      },
      {
        "command": "simpleScp.clearHistory",
        "title": "Clear Transfer History",
        "category": "Simple SCP",
        "icon": "$(clear-all)"
      },
      {
        "command": "simpleScp.openGitHubReadme",
        "title": "Read Documentation",
        "category": "Simple SCP",
        "icon": "$(book)"
      },
      {
        "command": "simpleScp.openIssues",
        "title": "Review Issues",
        "category": "Simple SCP",
        "icon": "$(issues)"
      },
      {
        "command": "simpleScp.reportIssue",
        "title": "Report Issue",
        "category": "Simple SCP",
        "icon": "$(comment)"
      },
      {
        "command": "simpleScp.openGitHubRepo",
        "title": "View on GitHub",
        "category": "Simple SCP",
        "icon": "$(github)"
      },
      {
        "command": "simpleScp.expandAll",
        "title": "Expand All",
        "category": "Simple SCP",
        "icon": "$(expand-all)"
      },
      {
        "command": "simpleScp.collapseAll",
        "title": "Collapse All",
        "category": "Simple SCP",
        "icon": "$(collapse-all)"
      }
    ],
    "menus": {
      "simpleScp.addMenu": [
        {
          "command": "simpleScp.addHost"
        },
        {
          "command": "simpleScp.addGroup"
        }
      ],
      "commandPalette": [
        {
          "command": "simpleScp.addHost"
        },
        {
          "command": "simpleScp.addGroup"
        },
        {
          "command": "simpleScp.importFromSshConfig"
        },
        {
          "command": "simpleScp.exportAllHosts"
        },
        {
          "command": "simpleScp.exportGroup",
          "when": "false"
        },
        {
          "command": "simpleScp.exportHost",
          "when": "false"
        },
        {
          "command": "simpleScp.importHosts"
        },
        {
          "command": "simpleScp.showLogs"
        },
        {
          "command": "simpleScp.showConnectionPool"
        },
        {
          "command": "simpleScp.uploadFile",
          "when": "false"
        },
        {
          "command": "simpleScp.browseFiles",
          "when": "false"
        },
        {
          "command": "simpleScp.downloadToLocal",
          "when": "false"
        },
        {
          "command": "simpleScp.editHost",
          "when": "false"
        },
        {
          "command": "simpleScp.duplicateHost",
          "when": "false"
        },
        {
          "command": "simpleScp.deleteHost",
          "when": "false"
        },
        {
          "command": "simpleScp.setupPasswordlessLogin",
          "when": "false"
        },
        {
          "command": "simpleScp.testConnection",
          "when": "false"
        },
        {
          "command": "simpleScp.refresh",
          "when": "false"
        },
        {
          "command": "simpleScp.configureAuth",
          "when": "false"
        },
        {
          "command": "simpleScp.copySshCommand",
          "when": "false"
        },
        {
          "command": "simpleScp.addBookmark",
          "when": "false"
        },
        {
          "command": "simpleScp.renameBookmark",
          "when": "false"
        },
        {
          "command": "simpleScp.deleteBookmark",
          "when": "false"
        },
        {
          "command": "simpleScp.browseBookmark",
          "when": "false"
        },
        {
          "command": "simpleScp.addHostToGroup",
          "when": "false"
        },
        {
          "command": "simpleScp.editGroup",
          "when": "false"
        },
        {
          "command": "simpleScp.moveHostToGroup",
          "when": "false"
        },
        {
          "command": "simpleScp.toggleStar",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "submenu": "simpleScp.addMenu",
          "when": "view == simpleScp.hosts",
          "group": "navigation@1"
        },
        {
          "command": "simpleScp.refresh",
          "when": "view == simpleScp.hosts",
          "group": "navigation@2"
        },
        {
          "command": "simpleScp.expandAll",
          "when": "view == simpleScp.hosts",
          "group": "navigation@3"
        },
        {
          "command": "simpleScp.importFromSshConfig",
          "when": "view == simpleScp.hosts",
          "group": "1_import@1"
        },
        {
          "command": "simpleScp.exportAllHosts",
          "when": "view == simpleScp.hosts",
          "group": "1_import@2"
        },
        {
          "command": "simpleScp.importHosts",
          "when": "view == simpleScp.hosts",
          "group": "1_import@3"
        },
        {
          "command": "simpleScp.pauseQueue",
          "when": "view == simpleScp.transferQueue",
          "group": "navigation@1"
        },
        {
          "command": "simpleScp.resumeQueue",
          "when": "view == simpleScp.transferQueue",
          "group": "navigation@2"
        },
        {
          "command": "simpleScp.clearCompleted",
          "when": "view == simpleScp.transferQueue",
          "group": "1_queue@1"
        },
        {
          "command": "simpleScp.clearAll",
          "when": "view == simpleScp.transferQueue",
          "group": "1_queue@2"
        },
        {
          "command": "simpleScp.showQueueStats",
          "when": "view == simpleScp.transferQueue",
          "group": "2_stats@1"
        },
        {
          "command": "simpleScp.viewTransferHistory",
          "when": "view == simpleScp.transferQueue",
          "group": "2_stats@2"
        }
      ],
      "view/item/context": [
        {
          "command": "simpleScp.browseFiles",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "inline@1"
        },
        {
          "command": "simpleScp.editHost",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "inline@2"
        },
        {
          "command": "simpleScp.duplicateHost",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "2_actions@0"
        },
        {
          "command": "simpleScp.copySshCommand",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "2_actions@1"
        },
        {
          "command": "simpleScp.testConnection",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "2_actions@2"
        },
        {
          "command": "simpleScp.configureAuth",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "2_actions@3"
        },
        {
          "command": "simpleScp.setupPasswordlessLogin",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "2_actions@4"
        },
        {
          "command": "simpleScp.moveHostToGroup",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "2_actions@5"
        },
        {
          "command": "simpleScp.toggleStar",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "2_actions@6"
        },
        {
          "command": "simpleScp.addBookmark",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "3_bookmarks@1"
        },
        {
          "command": "simpleScp.exportHost",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "4_export@1"
        },
        {
          "command": "simpleScp.deleteHost",
          "when": "view == simpleScp.hosts && viewItem == host",
          "group": "9_danger@1"
        },
        {
          "command": "simpleScp.browseBookmark",
          "when": "view == simpleScp.hosts && viewItem == bookmark",
          "group": "inline@1"
        },
        {
          "command": "simpleScp.renameBookmark",
          "when": "view == simpleScp.hosts && viewItem == bookmark",
          "group": "inline@2"
        },
        {
          "command": "simpleScp.deleteBookmark",
          "when": "view == simpleScp.hosts && viewItem == bookmark",
          "group": "9_danger@1"
        },
        {
          "command": "simpleScp.addHostToGroup",
          "when": "view == simpleScp.hosts && viewItem == group",
          "group": "inline@1"
        },
        {
          "command": "simpleScp.editGroup",
          "when": "view == simpleScp.hosts && viewItem == group",
          "group": "inline@2"
        },
        {
          "command": "simpleScp.exportGroup",
          "when": "view == simpleScp.hosts && viewItem == group",
          "group": "1_export@1"
        },
        {
          "command": "simpleScp.deleteHost",
          "when": "view == simpleScp.hosts && viewItem == group",
          "group": "2_danger@1"
        },
        {
          "command": "simpleScp.pauseTask",
          "when": "view == simpleScp.transferQueue && viewItem =~ /status-running/",
          "group": "inline@1"
        },
        {
          "command": "simpleScp.resumeTask",
          "when": "view == simpleScp.transferQueue && viewItem =~ /status-paused/",
          "group": "inline@1"
        },
        {
          "command": "simpleScp.cancelTask",
          "when": "view == simpleScp.transferQueue && viewItem =~ /(status-running|status-pending|status-paused)/",
          "group": "inline@2"
        },
        {
          "command": "simpleScp.retryTask",
          "when": "view == simpleScp.transferQueue && viewItem =~ /status-failed/",
          "group": "1_control@1"
        },
        {
          "command": "simpleScp.showTaskDetails",
          "when": "view == simpleScp.transferQueue",
          "group": "2_info@1"
        },
        {
          "command": "simpleScp.removeTask",
          "when": "view == simpleScp.transferQueue",
          "group": "9_danger@1"
        }
      ],
      "explorer/context": [
        {
          "command": "simpleScp.uploadFile",
          "group": "2_workspace@1"
        },
        {
          "command": "simpleScp.downloadToLocal",
          "group": "2_workspace@2"
        }
      ],
      "editor/context": [
        {
          "command": "simpleScp.uploadFile",
          "group": "2_workspace@1"
        },
        {
          "command": "simpleScp.downloadToLocal",
          "group": "2_workspace@2"
        }
      ]
    },
    "configuration": {
      "title": "Simple SCP",
      "properties": {
        "simpleScp.showDotFiles": {
          "type": "boolean",
          "default": true,
          "description": "Show hidden files and directories (dot files) when browsing remote files"
        },
        "simpleScp.speedUnit": {
          "type": "string",
          "enum": [
            "auto",
            "KB",
            "MB"
          ],
          "default": "auto",
          "description": "Download speed display unit. 'auto' will automatically choose between KB/s and MB/s based on speed"
        },
        "simpleScp.transferQueue.maxConcurrent": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum number of concurrent file transfers"
        },
        "simpleScp.transferQueue.autoRetry": {
          "type": "boolean",
          "default": true,
          "description": "Automatically retry failed transfers"
        },
        "simpleScp.transferQueue.maxRetries": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "maximum": 10,
          "description": "Maximum number of retry attempts for failed transfers"
        },
        "simpleScp.transferQueue.retryDelay": {
          "type": "number",
          "default": 2000,
          "minimum": 1000,
          "maximum": 60000,
          "description": "Delay between retry attempts (in milliseconds)"
        },
        "simpleScp.transferQueue.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for transfer completion"
        },
        "simpleScp.transferQueue.historySize": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 1000,
          "description": "Maximum number of transfer history records to keep"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.js --production",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/ssh2": "^1.15.0",
    "@types/vscode": "^1.108.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "esbuild": "^0.27.2",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "ssh2": "^1.17.0",
    "ssh2-sftp-client": "^12.0.1"
  }
}
